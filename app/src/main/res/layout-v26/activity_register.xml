<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src=""
        android:contentDescription="@string/todo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:text="@string/register"
        android:textColor="#53714B"
        android:textSize="30sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/name"
        android:layout_width="361dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#53714B"
        android:drawableEnd="@drawable/ic_person_black_24dp"
        android:drawablePadding="10dp"
        android:hint="@string/name"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLines="1"
        android:layout_marginTop="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="#53714B"
        android:textColorHint="#53714B"
        android:textSize="20sp"
        android:autofillHints="" />
    <EditText
        android:id="@+id/email"
        android:layout_width="361dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#53714B"
        android:drawableEnd="@drawable/ic_mail_outline_black_24dp"
        android:drawablePadding="10dp"
        android:hint="@string/email"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLines="1"
        android:layout_marginTop="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="#53714B"
        android:textColorHint="#53714B"
        android:textSize="20sp"
        android:autofillHints=""
        tools:ignore="TextFields" />
    <EditText
        android:id="@+id/password"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="@string/password"
        android:drawableEnd="@drawable/ic_vpn_key_black_24dp"
        android:drawablePadding="10dp"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLines="1"
        android:layout_marginTop="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="#53714B"
        android:textColorHint="#53714B"
        android:backgroundTint="#53714B"
        android:textSize="20sp"
        android:autofillHints=""
        tools:ignore="TextFields" />
    <EditText
        android:id="@+id/confirmpassword"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="CONFIRM PASSWORD"
        android:drawableEnd="@drawable/ic_vpn_key_black_24dp"
        android:drawablePadding="10dp"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLines="1"
        android:layout_marginTop="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="#53714B"
        android:textColorHint="#53714B"
        android:backgroundTint="#53714B"
        android:textSize="20sp"
        android:autofillHints=""
        tools:ignore="HardcodedText,TextFields" />
    <EditText
        android:id="@+id/phone"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="@string/phone_no"
        android:drawableEnd="@drawable/ic_phone_black_24dp"
        android:drawablePadding="10dp"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLines="1"
        android:layout_marginTop="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="#53714B"
        android:textColorHint="#53714B"
        android:backgroundTint="#53714B"
        android:textSize="20sp"
        tools:ignore="TextFields"
        android:autofillHints="" />
    <EditText
        android:id="@+id/otp"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="@string/verify_otp"
        android:drawableEnd="@drawable/ic_perm_phone_msg_black_24dp"
        android:drawablePadding="10dp"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLines="1"
        android:layout_marginTop="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="#53714B"
        android:textColorHint="#53714B"
        android:backgroundTint="#53714B"
        android:textSize="20sp"
        android:autofillHints="" />
    <Button
        android:id="@+id/signup"
        android:layout_width="350dp"
        android:layout_marginTop="33dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_button"
        android:text="@string/sign_up"
        android:textSize="18sp"
        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/loginpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="34dp"
        android:layout_marginTop="20dp"
        android:textColor="#53714B"
        android:text="@string/already_having_an_account_log_in" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

</LinearLayout>